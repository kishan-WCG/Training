  <title>View Product</title>
</head>
<body>
    <div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="d-flex flex-grow-1">
        <span class="w-100 d-lg-none d-block">
            <!-- hidden spacer to center brand on mobile --></span>
       
        <a class="navbar-brand-two mx-auto d-lg-none d-inline-block" href="#">
            <img src="//placehold.it/40?text=LOGO" alt="logo">
        </a>
        <div class="w-100 text-right">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#myNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </div>
    <div class="collapse navbar-collapse flex-grow-1 text-right" id="myNavbar">
        <ul class="navbar-nav ms-auto flex-nowrap">
            <li class="nav-item">
                <a href="#" class="nav-link m-2 menu-item ">Home</a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link m-2 menu-item">About</a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link m-2 menu-item">Contact</a>
            </li>
            <li class="nav-item">
                <a href="SignIn" class="nav-link m-2 menu-item">Sign In</a>
            </li>
            <li class="nav-item">
                <a href="SignUp" class="nav-link m-2 menu-item">Sign Up</a>
            </li>
              <li class="nav-item">
                <a href="admin-panel" class="nav-link m-2 menu-item">Admin</a>
            </li>

          
        
        </ul>
    </div>
</nav>
</div>


<div class="container">
<div class="row row-cols-3">
            {{#each viewproduct}}
                <div class="col mt-3">
                        <div class="card" style="width: 18rem;">
                            <img src="..." class="card-img-top" alt="...">
                            <div class="card-body">
                             <h5 class="card-title">{{name}}</h5>
                            <p class="card-text">{{price}}</p>
                            <p class="card-text">{{cate}}</p>
                            <p class="card-text">{{des}}</p>
                             
                                <hr>
                                <a href="/edit-product/{{_id}}" class="btn btn-primary">Edit</a>
                                <a href="delete/{{_id}}" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                       </div>
        {{/each}}
    </div>




</body>
</html>