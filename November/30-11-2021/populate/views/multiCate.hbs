<html>
    <head>
       <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
       <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
       <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    </head>
    <body>

<div class="container">
  <div class="row">
    <div class="col">
      <h4>Enter Product Name</h4>

<form method="post">
<input type="text" class="form-control" placeholder="Enter Product Name" name="product">
<div class="col-md-4">
       <label class="form-check-label"for="flexRadioDefault2"> Select Category</label>
            {{#each category}}
                  <div class="form-check">
                    <input class="form-check-input"type="checkbox"name="category" value={{_id}} id={{_id}}/>
                    <label class="form-check-label"for="flexCheckDefault">{{categoryName}}</label>
                  </div>
            {{/each}}

        <input type="submit" class="btn btn-primary">
</div>

</form>
 <table class="table">
  <thead>
    <tr>
      
      <th scope="col">Product</th>
      <th scope="col">Category</th>
  
    </tr>
  </thead>
  
      {{#each products}}
    <tr>    
      <td>{{productName}}</td>
      <td>{{#_category}} {{this.categoryName}}, {{/_category}}</td>
    </tr>
    {{/each}}
</table>
 

</body>
</html>