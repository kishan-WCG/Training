<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form method="POST" class="mx-1 mx-md-4">

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" name="name"  class="form-control" placeholder="Good Name" />
                      <label class="form-label" for="form3Example1c">Your Name</label>
                       {{#if error.name}}<span style="color: rgb(255, 0, 0);">{{error.name.[0]}}</span><br>{{/if}}
                    </div></div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="email" name="email" class="form-control" placeholder="email@gmail.com" />
                      <label class="form-label" for="form3Example3c">Your Email</label>
                      {{#if error.email}}<span style="color: rgb(255, 0, 0);">{{error.email.[0]}}</span><br>{{/if}}
                    </div></div>
                  
                     <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="number" name="number" class="form-control" placeholder="9876543210"/>
                      <label class="form-label" for="form3Example4cd">Mobile Number</label>
                      {{#if error.number}}<span style="color: rgb(255, 0, 0);">{{error.number.[0]}}</span><br>{{/if}}
                    </div></div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="password" name="password" class="form-control" placeholder="*******" />
                      <label class="form-label" for="form3Example4c">Password</label>
                      {{#if error.password}}<span style="color: rgb(255, 0, 0);">{{error.password.[0]}}</span><br>{{/if}}
                    </div></div>

                    <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" name="pancard" class="form-control" placeholder="BAJPC4350M"/>
                      <label class="form-label" for="form3Example4c">Pancard number</label>
                      {{#if error.pancard}}<span style="color: rgb(255, 0, 0);">{{error.pancard.[0]}}</span><br>{{/if}}
                    </div></div>

                       <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" name="gst" class="form-control" placeholder="24AABCU9603R1ZT" />
                      <label class="form-label" for="form3Example4c">GST number</label>
                      {{#if error.gst}}<span style="color: rgb(255, 0, 0);">{{error.gst.[0]}}</span><br>{{/if}}
                    </div></div>
                       <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" name="passport" class="form-control" placeholder="A2356892" />
                      <label class="form-label" for="form3Example4c">Passport  number</label>
                      {{#if error.passport}}<span style="color: rgb(255, 0, 0);">{{error.passport.[0]}}</span><br>{{/if}}
                    </div></div>

                      <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" name="adharcard"  class="form-control" placeholder="1234 5678 8910 0000" />
                      <label class="form-label" for="form3Example4c">Adharcard Number</label>
                      {{#if error.adharcard}}<span style="color: rgb(255, 0, 0);">{{error.adharcard.[0]}}</span><br>{{/if}}
                    </div></div>


               

                  

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    {{!-- <button type="button" class="btn btn-primary btn-lg">Register</button> --}}
                    <input type="submit" class="btn btn-primary" >
                  </div>

                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-registration/draw1.png" class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
    
