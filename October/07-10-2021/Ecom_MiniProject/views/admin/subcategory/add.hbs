{{>header}}
{{>sidebar}}

<div class="wrapper">




  <div class="register-box my-5  " style="margin: auto;">
    <div class="register-logo">
      <a href="index.html"><b>Add Category</b></a>
    </div>
  
    <div class="card">
      <div class="card-body register-card-body">
       
        
  
        <form method="post">
 
          <div class="input-group mb-3">
            <input type="text" name="subcategory" class="form-control" placeholder="Enter Sub Category Name">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          
          
         <div class="form-group">
                            <label for="inputStatus">Category</label>
                            <select id="inputStatus" class="form-control custom-select" name="subcategoryname">
                                <option selected disabled>Select one</option>
                                {{#each category}}

                                <option value={{_id}}>{{categoryname}}</option>

                                {{/each}}

                            </select>
                        </div>
      
          <div class="row">
            <div class="col-8">
              
            </div>
            <!-- /.col -->
            <div class="col-4">
              <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
            <!-- /.col -->
          </div>
        </form>
  
        
  
       
      </div>
      <!-- /.form-box -->
    </div><!-- /.card -->
  </div>

{{>footer}}