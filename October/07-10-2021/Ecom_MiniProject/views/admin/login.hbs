
<body class="hold-transition sidebar-mini layout-fixed" id="bg">
<div class="wrapper">




  <div class="register-box my-5  " style="margin: auto;">
    <div class="register-logo">
      <a href="index.html"><b>Admin Login</b></a>
    </div>
  
    <div class="card">
      <div class="card-body register-card-body">
        <p class="login-box-msg">Admin Login </p>
        
  
        <form method="post">
 
          <div class="input-group mb-3">
             
            <input type="email" name="email" class="form-control" placeholder="Email"> <br>
            
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div> 
          </div>
                {{#if error.email}}<span style="color: rgb(255, 0, 0);">{{error.email.[0]}}</span><br>{{/if}}  
          <div class="input-group mb-3">
           
            <input type="password" name="password" class="form-control" placeholder="Password">
              
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
              
              </div>
           
              <span> <br></span> <br>
              <h5>kl;</h5>
              {{#if error.password}}<span style="color: rgb(255, 0, 0);">{{error.password.[0]}}</span><br>{{/if}}
          </div>
          <h5>kl;</h5>
       {{!-- {{#if error.password}}<span style="color: rgb(255, 0, 0);">{{error.password.[0]}}</span><br>{{/if}} --}}
          <div class="row">
            <div class="col-8">
              <div class="icheck-primary">
                <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                <label for="agreeTerms">
                 I agree to the <a href="#">terms</a>
                </label>
              </div>
            </div>
            <!-- /.col -->
            <div class="col-4">
              <button type="submit" class="btn btn-primary btn-block">Login</button>
            </div>
            <!-- /.col -->
          </div>
        </form>
  
        <div class="social-auth-links text-center">
          <p>- OR -</p>
          <a href="#" class="btn btn-block btn-primary">
            <i class="fab fa-facebook mr-2"></i>
            Sign up using Facebook
          </a>
          <a href="#" class="btn btn-block btn-danger">
            <i class="fab fa-google-plus mr-2"></i>
            Sign up using Google+
          </a>
        </div>
  
        <a href="login.html" class="text-center">I already have a membership</a>
      </div>
      <!-- /.form-box -->
    </div><!-- /.card -->
  </div>
  
</body>
